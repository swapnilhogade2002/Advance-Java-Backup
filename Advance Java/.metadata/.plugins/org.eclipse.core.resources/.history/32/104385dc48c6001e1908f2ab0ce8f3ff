			<script>

				// Ensure $ is defined by using a wrapper function
				jQuery(document).ready(function ($) {
					$('#signupRole').change(function () {
						var selectedRole = $(this).val();

						// Disable/enable fields based on selected role
						if (selectedRole === 'ROLE_COMPANY') {
							$('#signupWorkStatus, #signupResume').prop('disabled', true);
						} else {
							$('#signupWorkStatus, #signupResume').prop('disabled', false);
						}
					});
				});
				function showTab(tabName) {
					if (tabName === 'login') {
						document.getElementById('loginTab').style.display = 'block';
						document.getElementById('signupTab').style.display = 'none';
					} else {
						document.getElementById('loginTab').style.display = 'none';
						document.getElementById('signupTab').style.display = 'block';
					}
				}
			</script>
