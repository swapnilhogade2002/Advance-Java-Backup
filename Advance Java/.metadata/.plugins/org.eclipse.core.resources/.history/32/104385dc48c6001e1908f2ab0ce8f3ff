	<script>
		function validateFormm() {
			var email = document.getElementById("email").value;
			var password = document.getElementById("password").value;
			var isValid = true;

			// Check email format
			if (!/\S+@\S+\.\S+/.test(email)) {
				document.getElementById("emailError").innerHTML = "Invalid email format";
				isValid = false;
			} else {
				document.getElementById("emailError").innerHTML = ""; // Clear error message
			}

			// Check password length
			if (password.length < 8) {
				document.getElementById("passwordError").innerHTML = "Password must be at least 8 characters long";
				isValid = false;
			} else {
				document.getElementById("passwordError").innerHTML = ""; // Clear error message
			}

			return isValid;
		}




		function validateSignupForm() {
			var isValid = true;

			// Reset error messages
			document.getElementById("roleError").innerHTML = "";
			document.getElementById("nameError").innerHTML = "";
			document.getElementById("emailError").innerHTML = "";
			document.getElementById("passwordError").innerHTML = "";
			document.getElementById("mobileError").innerHTML = "";
			document.getElementById("workError").innerHTML = "";
			document.getElementById("cityError").innerHTML = "";
			document.getElementById("resumeError").innerHTML = "";
			document.getElementById("checkboxError").innerHTML = "";

			// Check role
			var role = document.getElementById("signupRole").value;
			if (role === "") {
				document.getElementById("roleError").innerHTML = "Role is required";
				isValid = false;
			}

			// Check name
			var name = document.getElementById("signupName").value;
			if (name.trim() === "") {
				document.getElementById("nameError").innerHTML = "Name is required";
				isValid = false;
			}

			// Check email format
			var email = document.getElementById("signupEmail").value;
			if (!/\S+@\S+\.\S+/.test(email)) {
				document.getElementById("emailError").innerHTML = "Invalid email format";
				isValid = false;
			}

			// Check password
			var password = document.getElementById("signupPassword").value;
			if (password.trim() === "") {
				document.getElementById("passwordError").innerHTML = "Password is required";
				isValid = false;
			}

			// Check mobile number
			var mobile = document.getElementById("signupMobile").value;
			if (mobile.trim() === "") {
				document.getElementById("mobileError").innerHTML = "Mobile number is required";
				isValid = false;
			}

			// Check work status
			var workStatus = document.getElementById("signupWorkStatus").value;
			if (workStatus === "") {
				document.getElementById("workError").innerHTML = "Work status is required";
				isValid = false;
			}

			// Check city
			var city = document.getElementById("signupCity").value;
			if (city.trim() === "") {
				document.getElementById("cityError").innerHTML = "City is required";
				isValid = false;
			}

			// Check resume
			
			var resume = document.getElementById("signupResume").value;
			if (resume.trim() === "") {
				document.getElementById("resumeError").innerHTML = "Resume is required";
				isValid = false;
			}

			// Check checkbox
			var checkbox = document.getElementById("gridCheck").checked;
			if (!checkbox) {
				document.getElementById("checkboxError").innerHTML = "You must accept the terms and conditions";
				isValid = false;
			}

			return isValid;
		} 
	</script>




